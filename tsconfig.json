{
    "compilerOptions": {
        "target": "es6",
        "lib": ["esnext"],
        "strict": true,
        "declaration": true,
        "module": "commonjs",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}